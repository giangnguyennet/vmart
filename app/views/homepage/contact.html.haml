    %fieldset
      %legend Contact Us
      .field_row
        .label
          = label_tag :email, "Email"
        = email_field_tag :email
      .field_row
        .label
          =label_tag :subject, "Subject"
        = text_field_tag :subject
      .field_row
        .label
          = label_tag :message, "Message"

.contact_form_container.left
  = form_tag '/contact' do
    %fieldset
      %legend Contact Us
      .field_row
        .label
          = label_tag :company_name, "Company"
        = text_field_tag :company_name
      .field_row
        .label
          = label_tag :name, "Name"
        = text_field_tag :name
      .field_row
        .label
          = label_tag :phone, "Phone"
        = text_field_tag :phone
      .field_row
        .label
          = label_tag :email, "Email"
        = email_field_tag :email
      .field_row
        .label
          = label_tag :message, "Message"
        = text_area_tag :message, "", :size => "10x10"
      .field_row
        = submit_tag "Send"
        = submit_tag "Reset"
.address_container.right
